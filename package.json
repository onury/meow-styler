{
  "name": "meow-styler",
  "version": "1.0.0",
  "description": "Colors & formatting for meow CLI app helper.",
  "author": {
    "name": "Onur Yıldırım",
    "email": "onur@cutepilot.com",
    "url": "https://github.com/onury"
  },
  "repository": "onury/meow-styler",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "sideEffects": false,
  "files": [
    "lib",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "deps": "npx ncu -i",
    "audit": "npm audit --production",
    "lint": "eslint -c .eslintrc.json --ext .ts src",
    "build": "npm run lint && tsc --project tsconfig.build.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "cover": "vitest --coverage",
    "cover:txt": "vitest --coverage --coverage.reporter=text",
    "cover:ui": "vitest --coverage --ui --coverage.reporter=html"
  },
  "keywords": [
    "style",
    "format",
    "layout",
    "color",
    "cli",
    "command-line",
    "meow",
    "chalk",
    "parser"
  ],
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "peerDependencies": {
    "meow": "13.x"
  },
  "devDependencies": {
    "@types/node": "^22.4.0",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "eslint": "8.57",
    "eslint-config-oy": "^1.1.2",
    "meow": "^13.2.0",
    "tsconfig-oy": "^1.1.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
